{
    "version": 2,
    "builds": [
      {
        "src": "api/main.js",
        "use": "@vercel/node"
      },
      {
        "src": "vite.config.js",
        "use": "@vercel/vite",
        "config": {
          "outputDirectory": "dist"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/main.js"
      },
      {
        "source": "/assets/(.*)",
        "destination": "/dist/assets/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/dist/index.html"
      }
    ],
    "headers": [
      {
        "source": "/assets/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/html; charset=utf-8"
          }
        ]
      }
    ]
  }